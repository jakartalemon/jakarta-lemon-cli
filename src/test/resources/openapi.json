{
  "openapi": "3.1.0",
  "info": {
    "description": "This is an example of OpenAPI for REST adapter created from Jakarta Lemon",
    "summary": "Sample REST for Jakarta Lemon",
    "title": "Sample REST for Jakarta Lemon",
    "version": "3.1.0"
  },
  "paths": {
    "/banks": {
      "get": {
        "operationId": "getBanksList",
        "responses": {
          "200": {
            "description": "Gets the list of all banks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Bank"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/banks/{bankId}": {
      "get": {
        "operationId": "getBankById",
        "responses": {
          "200": {
            "description": "Get Bank by Id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Bank"
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "name": "bankId",
          "in": "path",
          "required": true,
          "description": "Bank ID",
          "schema": {
            "type": "string"
          },
          "style": "simple"
        }
      ]
    },
    "/accounts": {
      "post": {
        "operationId": "createAccount",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Register account information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccountResponse": {
        "type": "object"
      },
      "AccountRequest": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          }
        }
      },
      "Bank": {
        "type": "object",
        "properties": {
          "bankId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  },
  "jsonSchemaDialect": "https://spec.openapis.org/oas/3.1/dialect/base"
}